= form_for @customer do |f|
  - if @customer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@customer.errors.count, "error")} prohibited this customer from being saved:"
      %ul
        - @customer.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label "لوگوی مشتری"
    = f.file_field :image
  .field
    = f.label "نام مشتری"
    = f.text_field :name
  .field
    = f.label "توضیحات"
    = f.text_area :description, :class => "customer-des"
      
  
  .actions
    = f.submit 'ثبت', :class => "btn"
