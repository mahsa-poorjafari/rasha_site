= form_for @slide, :html => {:multipart => true} do |f|
  - if @slide.errors.any?
    #error_explanation
      %h2= "#{pluralize(@slide.errors.count, "error")} prohibited this slide from being saved:"
      %ul
        - @slide.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.file_field :image, :id => "slide_img"
    = f.label :توضیحات
    = f.text_area :description, :id => "slide_des"
    
  .actions
    .div_btn
      = f.submit 'ثبت تصویر'
