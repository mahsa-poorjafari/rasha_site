= form_for @page do |f|
  - if @page.errors.any?
    #error_explanation
      %h2= "#{pluralize(@page.errors.count, "error")} prohibited this page from being saved:"
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg
  
  .field
    = f.label "عنوان صفحه "
    = f.text_field :title, :disabled => (true if @page.read_attribute("title") == "تماس با ما")
  
  .field
    = f.label "متن صفحه"
    %br
      %div.editor
      = f.text_area :page_html, :class => "ckeditor"
  .actions
    = f.submit 'ثبت', :class => "btn"
