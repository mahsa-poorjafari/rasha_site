.list-div
  #welcom_pan
    %h2.heading2 
      = "صفحات متنی"
      %span 
        = "راشا"              
    .show-list 
      .table
        .tr
        - @pages.each do |page| 
          .tr
            .td= link_to content_tag(:div, page.title, :class => "pro-title"), page          
            .td
              .footer_Link
               
                = link_to 'اعمال تغییرات', edit_page_path(page)
                \|
                = link_to 'حذف', page, :method => :delete, :data => { :confirm => 'Are you sure?' }     
    .clrear-float
    #quotPan       
      = link_to content_tag("span", "صفحه جدید"), new_page_path, :class => "btn"

