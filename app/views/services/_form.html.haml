= form_for @service, :html => { :multipart => true  }  do |f|
  - if @service.errors.any?
    #error_explanation
      %h2= "#{pluralize(@service.errors.count, "error")} prohibited this service from being saved:"
      %ul
        - @service.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label "عنوان خدمات"
    = f.text_field :title
  .field
    = f.label  "توضیحات" 
    %br
      %div.editor
        %br
        = f.text_area :description, :class => "ckeditor"
        :javascript
          CKEDITOR.replace( 'service_description' );
    .field
    =f.fields_for :pictures do |picture|  
      .field
        =picture.file_field :image
        =picture.text_area :description, :rows => 3
  .actions
    = f.submit 'ثبت'
