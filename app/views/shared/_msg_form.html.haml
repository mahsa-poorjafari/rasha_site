.msg-div
  %h3.heading3{:style => "border-top:#c9c9c9 solid 1px; "}
    %span 
      = "تماس با ما"
    =image_tag "msg-icon.png"
    -if notice
      .notice-msg= notice
      .clrear-float 
  .msg-form
    = form_for @message = Message.new  do |f| 
      - if @message.errors.any?
        #error_explanation
          %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"
          %ul
            - @message.errors.full_messages.each do |msg|
              %li= msg

      .field
        = f.label "نام: *"
        = f.text_field :name
      .field
        = f.label "ایمیل: *"
        = f.text_field :email
      .field
        = f.label "تلفن: "
        = f.text_field :phone
      .field
        = f.label "متن پیام: *"
        = f.text_area :message, :class => "msg-feild"
      
      .actions
        = f.submit "ارسال", :class=>"btn"
