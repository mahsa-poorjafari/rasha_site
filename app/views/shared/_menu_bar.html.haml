#head
  #head_cen
    .head_height
      .head-serach
        -if is_admin?           
          =link_to "مشاهده پیام ها", messages_path, :id => "admin-link", :class => ('active' if current_page?(messages_path))      
          \|
          =link_to "اسلایدر", slides_path, :id => "admin-link", :class => ('active' if current_page?(slides_path))
          \|
          =link_to "شرکت های همکار", customers_path, :id => "admin-link", :class => ('active' if current_page?(customers_path))
          \|
          =link_to "خروج", delete_session_path, :id => "admin-link", :class => ('active' if current_page?(home_path)) 
          \|
          =link_to current_user.name, edit_user_path(current_user), :id => "admin-link", :class => ('active' if current_page?(edit_user_path(current_user)) )          
          
        .pull-left
          
        .clrear-float
      #head-menu
        %h1.logo                    
        %ul          
          %li{:class => ('active' if params[:action]== 'home') }
            %h3{:style => "height:60px"}
            = link_to "صفحه اصلی", home_path
          
          -Page.all.each do |page|  
            %li{:class => ('active' if current_page?(page_path(page)))    }
              %h3{:style => "height:60px"}
              = link_to page.title, page_path(page)
          %li{:class => ('active' if current_page?(Service))    }
            %h3{:style => "height:60px"}
            = link_to "خدمات", Service
          %li{ :class => ('active' if current_page?(Product))}
            %h3{:style => "height:60px"}
            = link_to "آموزش", Product
        
