#head
  #head_cen
    .head_height
      .head-serach
        -if is_admin?
          =link_to "Slider", Slide
          =link_to "Pages", Page
          
          =link_to current_user.name, edit_user_path(current_user)          
          =link_to "sign out", delete_session_path
          
        .pull-left
          =link_to (image_tag "en.png", :class => "language-icon", :id => "en"), locale: :en
          =link_to (image_tag "fa.png", :class => "language-icon", :id => "en"), locale: :fa
        .clrear-float
      #head-menu
        %h1.logo          
        %ul
          %li
            = link_to t("home"), home_path, :class => ('active' if current_page?( home_path))          
          
          -Page.all.each do |page|  
            %li
              = link_to page.title, page_path(page), :class => ('active' if current_page?(page_path(page)))    
          %li
            = link_to t("services_section.title"), Service, :class => ('active' if current_page?(Service))    
          %li
            = link_to t("products_section.title"), Product,  :class => ('active' if current_page?(Product))

