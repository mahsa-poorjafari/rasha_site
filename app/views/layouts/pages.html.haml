!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "keywords", :content => @keywords || "Rasha WebSite keywords"}
    %meta{:name => "description", :content => @page_desc || "Rasha WebSite!"}
    = yield(:refresh_meta) if content_for?(:refresh_meta)
    %title
      Rasha Web Site | #{@head.fetch(:title, '') if @head}
    =stylesheet_link_tag "application", :media => "all"
    =stylesheet_link_tag "http://www.font-api.ir/css/B Yekan={font-api.ir}.css", :media => "all"
    =favicon_link_tag 'favicon.png', rel:'shortcut icon', type: 'image/png'
    =javascript_include_tag "application"
    =csrf_meta_tags
  %body
    .main
      = render "shared/menu_bar" 
    .total-division
      #content
        =yield      
      = render 'shared/footer'
      
